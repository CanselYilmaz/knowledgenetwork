@model String
<div class="section-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Bilgi Ağına hoş geldiniz</h1>
            </div>
        </div>
    </div>
</div>
<div class="container container-int">
    <div class="row">
        <div class="col-md-8 col-sm-8">
            <h1>
                Bilgi paylaştıkça çoğalır
            </h1>
            <img src="~/img/post3.png" alt="post 2" class="img-responsive">
            <br>
            <p>
                Sende en güncel konularda güncel kalmak için aramıza katıl
            </p>
            <p>
                Birçok konuda yazarlarımızın yazdıklarını takip et
            </p>
        </div>
        <div class="col-md-4 col-sm-4 sidebar text-center">
            @if (Model != null)
            {
                <h2>@Model</h2>
            }
            <form class="form-signin" asp-action="Login" asp-controller="User" method="POST">
                <img class="mb-4" src="https://pluspng.com/img-png/user-png-icon-file-user-icon-black-01-png-311.png" alt=""
                    width="72" height="72">
                <h1 class="h3 mb-3 font-weight-normal">Bilgi Ağı </h1>
                <label for="inputEmail" class="sr-only">Email adresi</label>
                <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email adresi" required autofocus>
                <br>
                <label for="inputPassword" class="sr-only">Parola</label>
                <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Parola" required>
                <div class="checkbox mb-3">
                    <label>
                        <a asp-controller="User" asp-action="RegisterPage">Hesabınız yok mu?</a>
                    </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Giriş Yap</button>
            </form>


        </div>

    </div>

</div>
