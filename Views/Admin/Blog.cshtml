@model IEnumerable<knowledgenetwork.Models.Blog>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br>
<a href="/Admin/BlogPage">Yeni Blog Oluştur</a>
<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Başlık</th>
      <th scope="col">Kategori</th>
      <th scope="col">Okunma Sayısı</th>
      <th scope="col">Yayın Durumu</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var blog in Model){
    <tr>
      <th scope="row">@blog.Id</th>
      <td>@blog.Title</td>
      <td>@blog.Category.Title</td>
      <td>@blog.ReadCount</td>
      <td>
      @if(blog.IsPublish){
        <a>Yayında</a>
      }else{
        <a>Yayında Değil</a>
      }
      </td>
    </tr>
    }
  </tbody>
</table>